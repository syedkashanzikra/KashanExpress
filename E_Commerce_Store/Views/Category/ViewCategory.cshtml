@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category|Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">

                    <h4 class="card-title">Categories</h4>
                    <p class="card-title-desc">
                        The Categories are based on the products, meaning the product is based on the categories. Categories define the type of product, and we also make filters and other sections. We like to add many categories.
                    </p>

                    <a href="@Url.Action("CreateCategory", "Category")" class="btn btn-secondary mb-2">Add Category</a>

                    <div class="table-responsive">
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>C_ID</th>
                                    <th>C_NAME</th>
                                    <th>C_DESCRIPTION</th>
                                    <th>C_ADDED/C_UPDATED</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.ID</td>
                                        <td>@i.Name</td>
                                        <td>@i.Description</td>
                                        <td>@i.CategoryAdded</td>
                                        <td>
                                            <a type="button" asp-controller="Category" asp-action="EditCategory" asp-route-id="@i.ID" class="btn btn-success btn-sm m-1">Update</a>
                                            <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@i.ID" class="btn btn-danger btn-sm m-1">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div> <!-- end card-body -->
    </div> <!-- end card -->
</div> <!-- end container-fluid -->
